@model List<Manage_System.Areas.Coordinator.ModelView.ChatViewModel>
@{

    Layout = "~/Areas/Coordinator/Views/Shared/_Layout.cshtml";
}

<link href="~/css/index2.css" rel="stylesheet" />

<link rel="stylesheet" href="~/css/normalize.css" />
<link href="~/student/assets/assets/css/app.min.css" rel="stylesheet" />
<div class="main-content">
    <div class="row">
        <div class="col-lg-11 mx-auto">
            <!-- Card View -->
            <div class="row" id="card-view">
                @foreach (var user in Model)
                {
                    <div class="col-md-3">

                        <div class="card">
                            <div class="card-body">
                                <div class="m-t-20 text-center">
                                    <div class="avatar avatar-image" style="height: 100px; width: 100px;">
                                        <img src="~/images/avatar.png" alt="">
                                    </div>
                                    <h4 class="m-t-30">@user.RecipientName</h4>
                                    @if (user.LastMessage != null)
                                    {
                                        <p style="
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 20px;
    -webkit-line-clamp: 1;
    height: 20px;
    display: -webkit-box;
    -webkit-box-orient: vertical;">@user.LastMessage?.SentAt.Value.ToShortTimeString(): @user.LastMessage?.Content</p>
                                    }
                                    else
                                    {
                                        <p>No Message</p>
                                    }
                                </div>

                                <div class="text-center m-t-30">
                                    <a asp-area="Coordinator" asp-controller="Contribution" asp-action="Chat" asp-route-id="@user.revId" class="btn btn-primary btn-tone">
                                        <i class="anticon anticon-mail"></i>
                                        <span class="m-l-5">Contact</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <script src="~/student/assets/js/pages/profile.js"></script>
}