@using System.Globalization;
<!-- page css -->
<link href="~/student/assets/vendors/datatables/dataTables.bootstrap.min.css" rel="stylesheet">

<div class="header-sub-title">
    <nav class="breadcrumb breadcrumb-dash">
        <a class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
        <span class="breadcrumb-item active">Magazine</span>
    </nav>
</div>

<a class="btn btn-outline-info btn-sm add" asp-controller="Magazine" asp-action="Create" title="Create" style="margin-bottom: 20px">
    New Magazine <i class="bx bx-list-plus"></i>
</a>
<div class="card">
    <div class="card-body">
        <table id="data-table" class="table">
            <thead>
                <tr>
                    
                    <th>Description</th>
                    <th>Start Year</th>
                    <th>Close Year</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model)
                {
                    <tr>
                        <td>@account.Description</td>
                        
                        <td>@account.StartYear.ToString("yyyy/MM/dd")</td>
                        <td>@account.CloseYear.ToString("yyyy/MM/dd")</td>

                        <td style="width: 20px">
                            <a class="btn btn-outline-success btn-sm edit" asp-area="Admin" asp-action="Edit" asp-route-id="@account.Id" title="Edit">
                                Edit <i class="fas fa-pencil-alt"></i>
                            </a>
                        </td>
                        <td style="width: 20px">
                            <a class="btn btn-outline-danger btn-sm delete" asp-area="Admin" asp-action="Delete" asp-route-id="@account.Id" title="Delete">
                                Delete <i class="fas fa-trash-alt danger"></i>
                            </a>
                        </td>
                    </tr>

                }

            </tbody>
            <tfoot>

                <tr>
                    <th>Description</th>
                    <th>Start Year</th>
                    <th>Close Year</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section Scripts{
            $('#data-table').DataTable();

    <!-- page js -->
    <script src="~/student/assets/vendors/datatables/jquery.dataTables.min.js"></script>
    <script src="~/student/assets/vendors/datatables/dataTables.bootstrap.min.js"></script>
}