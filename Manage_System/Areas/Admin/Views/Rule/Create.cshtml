@model Manage_System.Areas.Admin.ModelView.RuleModelView
@{

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="header-sub-title">
    <nav class="breadcrumb breadcrumb-dash">
        <a class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
        <a class="breadcrumb-item" asp-area="Admin" asp-controller="Rule" asp-action="Index">Rule</a>
        <span class="breadcrumb-item active">Add Rule</span>
    </nav>
</div>


<div class="card">
    <div class="card-body">
        <form  asp-area="Admin" asp-controller="Rule" asp-action="Create" method="post">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label control-label">Rule</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Rule" placeholder="Rule">
                    <span asp-validation-for="Rule" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group row">
                <label class="col-sm-2 col-form-label control-label">Rule Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Name" placeholder="Rule Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary m-r-5">Submit</button>
            <a class="btn btn-secondary m-r-5" asp-controller="Rule" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
}
